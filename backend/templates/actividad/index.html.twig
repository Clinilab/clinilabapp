{% block title %}Actividad index{% endblock %}

{% block body %}
    <h1>Actividad index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>FechaProgramacion</th>
                <th>Activo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for actividad in actividads %}
            <tr>
                <td>{{ actividad.id }}</td>
                <td>{{ actividad.nombre }}</td>
                <td>{{ actividad.descripcion }}</td>
                <td>{{ actividad.fechaProgramacion ? actividad.fechaProgramacion|date('Y-m-d') : '' }}</td>
                <td>{{ actividad.activo ? 'Yes' : 'No' }}</td>
                <td>
