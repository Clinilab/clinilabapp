{% extends 'base.html.twig' %}

{% block title %}Publicacion index{% endblock %}

{% block body %}
    <h1>Publicacion index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tipo</th>
                <th>Descripcion</th>
                <th>FechaRegistro</th>
                <th>Activo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for publicacion in publicacions %}
            <tr>
                <td>{{ publicacion.id }}</td>
                <td>{{ publicacion.tipo }}</td>
                <td>{{ publicacion.descripcion }}</td>
                <td>{{ publicacion.fechaRegistro ? publicacion.fechaRegistro|date('Y-m-d') : '' }}</td>
                <td>{{ publicacion.activo ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('publicacion_show', {'id': publicacion.id}) }}">show</a>
                    <a href="{{ path('publicacion_edit', {'id': publicacion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('publicacion_new') }}">Create new</a>
{% endblock %}
