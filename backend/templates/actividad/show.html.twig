{% extends 'base.html.twig' %}

{% block title %}Actividad{% endblock %}

{% block body %}
    <h1>Actividad</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actividad.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ actividad.nombre }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ actividad.descripcion }}</td>
            </tr>
            <tr>
                <th>FechaProgramacion</th>
                <td>{{ actividad.fechaProgramacion ? actividad.fechaProgramacion|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{{ actividad.activo ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('actividad_index') }}">back to list</a>

    <a href="{{ path('actividad_edit', {'id': actividad.id}) }}">edit</a>

